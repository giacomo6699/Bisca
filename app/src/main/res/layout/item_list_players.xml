<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/rectangle"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="5dp"
        android:elevation="2dp"
        android:weightSum="1">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="0.45"
        android:layout_height="wrap_content"
        android:text="Giocatore1"
        android:textColor="@color/textcolor"
        android:layout_marginLeft="5dp"
        android:textSize="21.5dp"
        android:id="@+id/TVItemGiocPlayers"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.35"
            android:layout_height="wrap_content"
            android:text='"A PEZZI"'
            android:gravity="center"
            android:textColor="#D3333232"
            android:layout_gravity="bottom"
            android:layout_marginLeft="5dp"
            android:textSize="13dp"
            android:id="@+id/TVItemGiocEsclam"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:src="@drawable/checkplayers"
        android:tint="@color/colorAccent"
        android:id="@+id/IMPlayers"
        android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>